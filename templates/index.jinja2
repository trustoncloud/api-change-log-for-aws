{% extends "template.jinja2" %}
{% from "macros.jinja2" import render_service_summary %}
{% block content %}
  <section id="content" class="section">
    <div class="tile is-ancestor">
      <div class="tile is-12 is-vertical is-parent">
        {% for release in releases %}
          {% for svc_change in release %}
            <div class="tile is-child box">
              <div class="columns">
                <div class="column">
                  <a href="/archive/service/{{ svc_change.name }}">
                    <span class="is-inline-block {{ api.get_icon_style(svc_change.name, 48) }}">&nbsp;</span>
                  </a>
                </div>
                <div class="column">{{ render_service_summary(release, svc_change) }}</div>
              </div>
            </div>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock content %}

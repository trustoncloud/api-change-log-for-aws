{% extends "template.jinja2" %}
{% block page_head %}
  <script src="/assets/js/vue.js"></script>
  <script src="/assets/js/search.js"></script>
{% endblock page_head %}
{% block content %}
  <section class="section is-service">
    <div class="tile is-ancestor">
      <div class="tile is-12 is-vertical is-parent">
        {% for service in services %}
          <div class="tile is-child box">
            <div class="columns">
              <div class="column">
                <a href="/archive/service/{{ service }}">
                  <span class="is-block {{ api.get_icon_style(service, 48) }}"></span>
                </a>
              </div>
              <div class="column">
              <span class="title is-5"><a href="./{{ service }}">{{ api.get_service_title(service, changes[service]) }}</a>
              ({{ changes[service]|length }} Changes) </span> - Updated
              {{ api.get_human_age(changes[service][0].created) }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock content %}
